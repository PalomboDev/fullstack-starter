{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "src",
    "paths": {
      "@prisma/*": ["../prisma/*"],
      "@components/*": ["../src/components/*"],
      "@server/*": ["../src/server/*"],
      "@utils/*": ["../src/utils/*"],
      "@lib/*": ["../src/lib/*"],
      "@pages/*": ["../src/pages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
